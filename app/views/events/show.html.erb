<div class="event-show-container">
  <% if notice.present? %>
    <div class="notice-banner">
      <%= notice %>
    </div>
  <% end %>

  <div class="event-detail-card">
    <h1><%= @event.title %></h1>

    <div class="event-time-info">
      <div class="time-block">
        <i class="far fa-calendar-alt"></i>
        <div class="time-details">
          <span class="label">Starts</span>
          <span class="value"><%= @event.start_time.strftime("%B %d, %Y") %></span>
          <span class="time"><%= @event.start_time.strftime("%I:%M %p") %></span>
        </div>
      </div>
      <div class="time-block">
        <i class="far fa-clock"></i>
        <div class="time-details">
          <span class="label">Ends</span>
          <span class="value"><%= @event.end_time.strftime("%B %d, %Y") %></span>
          <span class="time"><%= @event.end_time.strftime("%I:%M %p") %></span>
        </div>
      </div>
    </div>

    <div class="description-section">
      <h2>Description</h2>
      <p><%= @event.description %></p>
    </div>

    <div class="action-buttons">
      <%= link_to "Edit Event", edit_event_path(@event), class: "edit-button" %>
      <%= link_to "Back to Events", events_path, class: "back-button" %>
      <%= button_to "Delete Event", @event, method: :delete, class: "delete-button",
                    form: { data: { turbo_confirm: "Are you sure you want to delete this event?" } } %>
    </div>
  </div>
</div>

<style>
    /* Add the CSS for the show page here */
    .event-show-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .event-detail-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Add the rest of the CSS styling for the show page */
</style>
